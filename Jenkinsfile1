{

  stage('CheckOutCode')
  {
    steps
	{
    git branch: 'development', url: 'https://github.com/Kiran-AWS-Git/maven-web-application.git'
	
	}
  }
  
  stage('Build')
{
  steps
  {
  sh  "mvn clean package"
  }
}

